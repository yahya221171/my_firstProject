@model Mahya.Domain.ViewModels.Site.Sliders.FilterSlidersViewModel

@if (Model.Sliders != null && Model.Sliders.Any())
{
    @foreach (var slider in Model.Sliders)
    {
        <div class="intro-slide"
             style="background-image: url(@(PathExtensions.SliderOrgin+slider.SliderImage));">
            <div class="container intro-content text-center">
       
                <h3 class="intro-subtitle text-white">@slider.SliderTitle</h3>
                <!-- End .h3 intro-subtitle -->
                <h1 class="intro-title text-white">@slider.SliderText</h1><!-- End .intro-title -->

                <a href="@slider.Href" class="btn btn-outline-white-4">
                    <span>@slider.TextBtn</span>
                </a>
            </div><!-- End .intro-content -->
        </div><!-- End .intro-slide -->
    }
}


