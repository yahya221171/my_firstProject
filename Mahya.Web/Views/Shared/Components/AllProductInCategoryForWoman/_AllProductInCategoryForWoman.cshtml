@model List< Mahya.Domain.ViewModels.Site.Products.ProductItemViewModel>

@if (Model != null && Model.Any())
{
    <div class="tab-pane p-0 fade" id="trending-women-tab" role="tabpanel"
         aria-labelledby="trending-women-link">
                        <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow"
                            data-toggle="owl" data-owl-options='{
                                "nav": false, 
                                "dots": true,
                                "margin": 20,
                                "loop": false,
                                "rtl": true, 
                            "responsive": {
                                    "0": {
                                        "items":0
                                    },
                                    "480": {
                                        "items":2
                                    },
                                    "768": {
                                        "items":3
                                    },
                                    "992": {
                                        "items":4
                                    },
                                    "1200": {
                                        "items":4,
                                        "nav": true,
                                        "dots": false
                                    }
                                }
                            }'>
                               @foreach (var product in Model)
                            {
                                <partial name="_ProductBox" model="product"/>
                            }
                        </div><!-- End .owl-carousel -->
                    </div><!-- .End .tab-pane -->
                            
                       

           
}


