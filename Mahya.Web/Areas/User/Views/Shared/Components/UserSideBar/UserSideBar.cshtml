@model Mahya.Domain.Models.Account.User


<form>
    <div class="box-shadow info-image-user mb-3">
        <div class="p-3">
           <img class="img-thumbnail  box-shadow img-account" src="@(PathExtensions.UserAvatarOrgin +Model.Avatar)">
       </div>
        <div class="text-center p-1">
